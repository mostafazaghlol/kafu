<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/Titleusername"
            style="@style/Title"
            android:layout_marginRight="@dimen/topmargin"
            android:layout_toLeftOf="@id/accountaboutback"
            android:text="اسم المستخدم" />

        <ImageView
            android:id="@+id/accountaboutback"
            android:layout_width="@dimen/iconwidth2"
            android:layout_height="@dimen/iconheight2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/topmarginless"
            android:src="@drawable/back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/topmarginless"
                android:id="@+id/mandoopimage"
                android:src="@drawable/b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/topmargin"
                android:gravity="right"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/topmargin">
                    <TextView
                        android:id="@+id/TxtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم المستخدم"
                        android:textSize="@dimen/mid" />
                    <EditText
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:id="@+id/EdModName"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="الاسم"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/topmargin"
                android:gravity="right"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/topmargin">
                    <TextView
                        android:id="@+id/TxtUserPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0111552288"
                        android:gravity="center"
                        android:textSize="@dimen/mid" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number"
                        android:visibility="gone"
                        android:id="@+id/EdModPhone"
                        android:inputType="number"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="رقم الهاتف"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mandooplinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/topmarginless"
                    android:background="#eeeeee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/topmargin"
                    android:layout_marginBottom="@dimen/topmarginless"
                    android:text="بيانات المركبه"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />

                <ImageView
                    android:id="@+id/markbaimage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fackphoto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelmodel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="2017 "
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="الموديل"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#eeeeee"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="50 ريال "
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="قيمة التوصيل"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelnumberofseats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="7 "
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="عدد المركبات"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#eeeeee"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelPlace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="الرياض"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="موقع المركبة"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelmohafzarate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="100%"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نسبة المحافظة"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#eeeeee"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/topmarginless"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtTawseelSecurity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/topmarginless"
                                android:text="100%"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نسبة الامان"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/mid" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/Btmodifiyaccount"
                style="@style/wrabbutton"
                android:layout_below="@id/EdLoginPass"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:background="@drawable/buttonshapewhitegreen"
                android:gravity="center"
                android:text="تعديل البيانات"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/BtMyOrders"
                style="@style/wrabbutton"
                android:layout_below="@id/EdLoginPass"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshapeyellow"
                android:text="طلباتى" />

            <Button
                android:id="@+id/BtFawteer"
                style="@style/wrabbutton"
                android:layout_below="@id/EdLoginPass"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="الفواتير" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>