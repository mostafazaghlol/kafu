<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_toLeftOf="@id/fatweerback"
            android:layout_marginRight="@dimen/topmargin"
            style="@style/Title"
            android:text="الفواتير" />
        <ImageView
            android:id="@+id/fatweerback"
            android:layout_width="@dimen/iconwidth2"
            android:layout_height="@dimen/iconheight2"
            android:src="@drawable/back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/topmarginless"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/emptyfawteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا يوجد فواتير"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ReFawteer"/>
    </RelativeLayout>

</LinearLayout>