<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_toLeftOf="@id/acutionorderback"
            android:layout_marginRight="@dimen/topmargin"
            style="@style/Title"
            android:id="@+id/acutionhname"
            android:text="عن التطبيق" />
        <ImageView
            android:id="@+id/acutionorderback"
            android:layout_width="@dimen/iconwidth2"
            android:layout_height="@dimen/iconheight2"
            android:src="@drawable/back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/topmarginless"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/field3"
            android:src="@drawable/fackphoto"
            android:scaleType="fitXY"
            android:id="@+id/acutionphoto"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/Txtacutionweight"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="200"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الوزن"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/TxtacutionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="نوع1"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="النوع"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/Txtacutiondate"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="29/1/2019"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التاريخ"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aaaaaa"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/TxtacutionLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="200"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الطول"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/TxtacutionTypexxx"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="نوع1"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نوع المنتج"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtacutionLanbanatypex"
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="200"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نوع اللبانه"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"/>
        <LinearLayout
            android:id="@+id/auction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    style="@style/texts"
                    android:id="@+id/Txtauctionto"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="نوع1"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الى"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/topmarginless"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Txtacutionfrom"
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:text="200"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="من"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mid" />
            </LinearLayout>



        </LinearLayout>
        <View
            android:id="@+id/vvvv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الوصف"
            android:layout_marginRight="@dimen/topmarginless"
            android:textSize="@dimen/mid"
            android:textColor="@color/colorAccent"/>
        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الوصف"
            android:id="@+id/TxtacutionDes"
            android:layout_marginRight="@dimen/topmarginless"
            android:textSize="@dimen/small"
            android:textColor="#000000"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:cardElevation="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmed mohameed"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/topmarginless"
                    android:id="@+id/Txtacutionbuyername"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmed mohameed"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/topmarginless"
                    android:id="@+id/Txtacutionprice"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <FrameLayout
            android:id="@+id/nono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/normal"
                android:layout_marginTop="@dimen/topmargin"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Btordranyentermajad"
                    style="@style/xwrabbutton"
                    android:layout_below="@id/EdLoginPass"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"

                    android:text="ادخل المزاد" />

                <EditText
                    android:id="@+id/Ednormalprice"
                    style="@style/xwbutton"
                    android:layout_below="@id/EdLoginPass"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="السعر" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:id="@+id/mandoopcc"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lixx"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/Edmajadtime"
                        style="@style/xwbutton"
                        android:layout_below="@id/EdLoginPass"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="المده" />
                    <EditText
                        android:id="@+id/Edenterprice"
                        style="@style/xwbutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/EdLoginPass"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_gravity="center"
                        android:hint="ادخل السعر" />
                </LinearLayout>


                <Button
                    android:id="@+id/Btentermajad2"
                    style="@style/xwrabbutton"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/lixx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="ادخل المزاد" />

            </RelativeLayout>

        </FrameLayout>


        <TextView
            android:id="@+id/cxcxc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اخر المزايدين"
            android:textSize="@dimen/mid"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:layout_marginTop="@dimen/topmargin"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/ReLasetMujadeen"/>
    </LinearLayout>
</ScrollView>


</LinearLayout>